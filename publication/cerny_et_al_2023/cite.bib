@article{cernyetal2023,
    author = {{\v C}ern{\'y}, David and van Els, Paul and Natale, Rossy and Gregory, Steven M. S.},
    title = {A new genus-group name for \textit{{B}urhinus bistriatus} ({W}agler, 1829) and \textit{{B}urhinus superciliaris} ({T}schudi, 1843)},
    journal = {Avian Systematics},
    volume = {1},
    number = {3},
    pages = {31-43},
    year = {2023},
    month = {05},
    abstract = {Recent phylogenetic findings indicate that the divergence of the Neotropical taxa \textit{Burhinus bistriatus} (Wagler, 1829) and \textit{Burhinus superciliaris} (Tschudi, 1843) from other thick-knees (Burhinidae) predates the split between the remaining species of \textit{Burhinus} and the genus \textit{Esacus}, rendering the genus \textit{Burhinus} paraphyletic. The great age of the former divergence and potential homonymy issues stemming from treating \textit{Esacus} Lesson, 1831 as a junior subjective synonym of \textit{Burhinus} Illiger, 1811 suggest that the emergent paraphyly is best prevented by introducing a new genus-group name for the two New World species of \textit{Burhinus}. Accordingly, we describe a new genus, \textit{Hesperoburhinus} gen. nov., under Article 13.1.1 and Article 16.1 of the International Code of Zoological Nomenclature (ICZN, 1999).},
    issn = {2051-4441},
    url = {https://www.aviansystematics.org/uploads/texteditor/AS_1_3_PDFA.pdf},
}